<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preferences">

    <Button
        android:id="@+id/prefsToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="prefsToHomeButtonClick"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:layout_weight="0"
        android:gravity="center_horizontal|center_vertical"
        android:text="Max Clip Count:"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/maxClipsNum"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/maxClipsNum"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:layout_weight="0"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:text="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/darkModeSwitch"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Dark Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/applyChangesButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:onClick="applyChangesButtonClick"
        android:text="Apply Changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/darkModeSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>